{
  "description": "Aerospike Indirect Input",
  "properties": {
    "connectionInfo":{
      "description":"connection parameters",
      "type":"object",
      "required":["host","port"],
      "properties":{
        "host":{
          "description": "host IP",
          "type": "string"
        },
        "port":{
          "description": "host port number",
          "type": "integer"
        }
      }
    },
    "aerospikeData": {
      "description": "Data to be passed into AS db",
      "type": "array",
     "items":{
       "required": ["namespace", "set", "records"],
       "properties": {
         "namespace": {
           "description": "name of the namespace",
           "type": "string"
         },
         "set": {
           "description": "test set name",
           "type": "string"
         },
         "records": {
           "description": "array of records",
           "type": "array",
           "required":["PK","binData"],
           "items":
             {
               "type": "object",
               "properties": {
                 "PK": {
                   "description": "Primary key",
                   "type": "string"
                 },
                 "binData":{
                   "description":" bin key-value pair",
                   "type":"object"
                 }
               }
             }

         }
       }
     }
    }
  }
}